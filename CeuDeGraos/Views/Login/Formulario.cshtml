@{
    ViewData["Title"] = "Login";
}

<div style="gap: 15px;" class="d-flex flex-column pdt-50  align-items-center background-body" style="height: 730px;">
    <div class="container d-flex justify-content-center align-items-center">
         
        <div style="width: 800px; height: 600px; border-radius: 10px;"
            class="login d-flex flex-column background-content p-5 justify-content-center align-items-center">
            <h1 style="color: var(--secondary-color);" class="font-arial">Acessar a sua conta</h1>

            <form asp-action="login" id="clientForm"
                class="d-flex flex-column full-width justify-content-center align-items-center gap-3 pdt-30">

                <input placeholder="CPF/CNPJ" type="text" class="full-width" name="cpfcnpj">
                <span id="error-cpfcnpj" style="color: red; font-size: 12px; display: none;"></span>
                <input placeholder="Senha" type="password" class="full-width" maxlength="14" name="senha">

                <div class="d-flex tex-start full-width">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger"} )
                </div>

                <button style="height: 50px; width: 300px; border-radius: 40px; margin: 0 !important;"
                        class="button-secondary-color-white font-arial mt-3">Acessar</button>

                <a class="font-arial" asp-controller="RecuperacaoSenha" asp-action="FormularioEmail">Esqueci a senha</a>

                <div>
                    <span>Ainda n√£o possui conta?</span>
                    <a style="margin-right: 10px;" class="font-arial" asp-controller="Cadastro"
                        asp-action="Formulario">Cadastre-se</a>
                </div>

            </form>
        </div>
    </div>
</div>
<script>
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
